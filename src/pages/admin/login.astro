---
import Layout from '../../layouts/Layout.astro';
import { checkPassword, createSession, isAuthenticated } from '../../lib/auth';

// Check if already authenticated
if (isAuthenticated(Astro.cookies)) {
  return Astro.redirect('/admin/dashboard');
}

let error = '';

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const password = formData.get('password') as string;

  if (checkPassword(password)) {
    createSession(Astro.cookies);
    return Astro.redirect('/admin/dashboard');
  } else {
    error = 'Contraseña incorrecta';
  }
}
---

<Layout title="Admin - Login">
  <main class="min-h-screen flex items-center justify-center px-4 bg-gray-50">
    <div class="w-full max-w-md">
      <div class="bg-white rounded-lg shadow-md p-8">
        <h1 class="text-2xl font-bold text-center mb-6">Admin Access</h1>

        <form method="POST" class="space-y-4">
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
              Contraseña
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent outline-none"
              placeholder="Introduce la contraseña"
            />
          </div>

          {error && (
            <p class="text-red-600 text-sm">{error}</p>
          )}

          <button
            type="submit"
            class="w-full bg-gray-900 text-white py-3 rounded-lg font-medium hover:bg-gray-800 transition-colors"
          >
            Entrar
          </button>
        </form>
      </div>
    </div>
  </main>
</Layout>
