---
import '../styles/global.css';
import { clearSession } from '../lib/auth';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

// Handle logout
if (Astro.request.method === 'POST' && Astro.url.searchParams.get('action') === 'logout') {
  clearSession(Astro.cookies);
  return Astro.redirect('/admin/login');
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Forum&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50" style="font-family: 'Forum', serif;">
    <!-- Mobile Header -->
    <header class="lg:hidden bg-gray-900 text-white">
      <div class="flex items-center justify-between p-4">
        <h1 class="text-lg font-bold">Admin Panel</h1>
        <button id="mobile-menu-button" class="p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </header>

    <!-- Mobile Menu Overlay -->
    <div id="mobile-menu" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden lg:hidden">
      <div class="fixed inset-y-0 left-0 w-64 bg-gray-900 text-white flex flex-col">
        <div class="flex items-center justify-between p-4">
          <h1 class="text-lg font-bold">Admin Panel</h1>
          <button id="mobile-menu-close" class="p-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <nav class="flex-1 px-4 space-y-1 overflow-y-auto">
          <a
            href="/admin/dashboard"
            class:list={[
              "block px-4 py-2 rounded-lg transition-colors",
              currentPath === "/admin/dashboard" ? "bg-gray-800" : "hover:bg-gray-800"
            ]}
          >
            Dashboard
          </a>
          <a
            href="/admin/categories"
            class:list={[
              "block px-4 py-2 rounded-lg transition-colors",
              currentPath.startsWith("/admin/categories") ? "bg-gray-800" : "hover:bg-gray-800"
            ]}
          >
            Categorías
          </a>
          <a
            href="/admin/projects"
            class:list={[
              "block px-4 py-2 rounded-lg transition-colors",
              currentPath.startsWith("/admin/projects") ? "bg-gray-800" : "hover:bg-gray-800"
            ]}
          >
            Proyectos
          </a>
          <a
            href="/admin/agenda"
            class:list={[
              "block px-4 py-2 rounded-lg transition-colors",
              currentPath.startsWith("/admin/agenda") ? "bg-gray-800" : "hover:bg-gray-800"
            ]}
          >
            Agenda
          </a>
          <a
            href="/admin/contacts"
            class:list={[
              "block px-4 py-2 rounded-lg transition-colors",
              currentPath.startsWith("/admin/contacts") ? "bg-gray-800" : "hover:bg-gray-800"
            ]}
          >
            Contactos
          </a>
        </nav>

        <div class="p-4 border-t border-gray-800">
          <a href="/" class="block px-4 py-2 hover:bg-gray-800 rounded-lg transition-colors mb-2">
            Ver sitio web
          </a>
          <form method="POST" action="?action=logout">
            <button type="submit" class="w-full px-4 py-2 text-left hover:bg-gray-800 rounded-lg transition-colors">
              Cerrar sesión
            </button>
          </form>
        </div>
      </div>
    </div>

    <div class="lg:flex h-screen">
      <!-- Desktop Sidebar -->
      <aside class="hidden lg:flex lg:w-64 bg-gray-900 text-white flex-col">
        <div class="p-6">
          <h1 class="text-xl font-bold">Admin Panel</h1>
        </div>

        <nav class="flex-1 px-4 space-y-1 overflow-y-auto">
          <a
            href="/admin/dashboard"
            class:list={[
              "block px-4 py-2 rounded-lg transition-colors",
              currentPath === "/admin/dashboard" ? "bg-gray-800" : "hover:bg-gray-800"
            ]}
          >
            Dashboard
          </a>
          <a
            href="/admin/categories"
            class:list={[
              "block px-4 py-2 rounded-lg transition-colors",
              currentPath.startsWith("/admin/categories") ? "bg-gray-800" : "hover:bg-gray-800"
            ]}
          >
            Categorías
          </a>
          <a
            href="/admin/projects"
            class:list={[
              "block px-4 py-2 rounded-lg transition-colors",
              currentPath.startsWith("/admin/projects") ? "bg-gray-800" : "hover:bg-gray-800"
            ]}
          >
            Proyectos
          </a>
          <a
            href="/admin/agenda"
            class:list={[
              "block px-4 py-2 rounded-lg transition-colors",
              currentPath.startsWith("/admin/agenda") ? "bg-gray-800" : "hover:bg-gray-800"
            ]}
          >
            Agenda
          </a>
          <a
            href="/admin/contacts"
            class:list={[
              "block px-4 py-2 rounded-lg transition-colors",
              currentPath.startsWith("/admin/contacts") ? "bg-gray-800" : "hover:bg-gray-800"
            ]}
          >
            Contactos
          </a>
        </nav>

        <div class="p-4 border-t border-gray-800">
          <a href="/" class="block px-4 py-2 hover:bg-gray-800 rounded-lg transition-colors mb-2">
            Ver sitio web
          </a>
          <form method="POST" action="?action=logout">
            <button type="submit" class="w-full px-4 py-2 text-left hover:bg-gray-800 rounded-lg transition-colors">
              Cerrar sesión
            </button>
          </form>
        </div>
      </aside>

      <!-- Main content -->
      <main class="flex-1 overflow-auto lg:h-screen">
        <div class="p-4 lg:p-8">
          <slot />
        </div>
      </main>
    </div>

    <script>
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      const mobileMenuClose = document.getElementById('mobile-menu-close');

      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.remove('hidden');
      });

      mobileMenuClose?.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
      });

      // Close menu when clicking overlay
      mobileMenu?.addEventListener('click', (e) => {
        if (e.target === mobileMenu) {
          mobileMenu.classList.add('hidden');
        }
      });
    </script>
  </body>
</html>
